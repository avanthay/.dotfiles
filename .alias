# alias for reading aliases
alias a='alias'
alias aa='source ~/.alias'

# git aliases
alias glo='git log --graph'
alias gloa='glo --all'
alias glot='glo --since=0am'
alias gt='git tag'
alias gmn='git merge --no-ff'
alias gmt='git mergetool --prompt'
alias gds='git diff --stat'

# misc
alias tmp='cd /tmp'
alias dot='/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME'

# alias for node / meteor
alias n='npm'
alias nr='npm run'
alias m='meteor'
alias mn='meteor npm'
alias mnr='meteor npm run'

# alias for yarn / meteor yarn
alias y='yarn'
alias my='meteor yarn'

# alias for parallels
alias prl='prlctl'

# docker aliases
alias d='docker'
alias dr='docker run --rm'
alias dri='docker run --rm -t -i'
alias di='docker image'
alias dis='docker images'
alias dp='docker ps'
alias dpa='docker ps --all'

# tree alias
alias lt='tree -I "node_modules|.git|.idea|.meteor" -a'
alias lta='tree -I "node_modules|.git|.idea|.meteor|app" -a'

# vpn alias
alias vpneth='sudo openconnect --authgroup staff-net -u avdavid@staff-net.ethz.ch sslvpn.ethz.ch'
alias vpnethadm='sudo openconnect --authgroup inf-adm -u avdavid@inf-adm.ethz.ch sslvpn.ethz.ch'
